<h2 class="text-xl text-right text-cyan-700 font-bold">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "flex flex-col" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

    <%= f.label :password, "New password", class: "font-bold text-cyan-900 mx-2 mt-4 text-lg" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "rounded-md border border-cyan-700 text-cyan-900" %>

    <%= f.label :password_confirmation, "Confirm new password", class: "font-bold text-cyan-900 mx-2 mt-4 text-lg" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-md border border-cyan-700 text-cyan-900" %>

    <%= f.submit "Change my password", class: "border border-zinc-300 p-2 bg-cyan-700 my-2 text-zinc-100 font-bold rounded-md" %>
<% end %>

<%= render "devise/shared/links" %>
