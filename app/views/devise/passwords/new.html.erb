<h2 class="text-xl text-right text-cyan-700 font-bold">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": "false", method: :post, class: "flex flex-col" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.label :email, class: "font-bold text-cyan-900 mx-2 mt-4 text-lg" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-md border border-cyan-700 text-cyan-900" %>

    <%= f.submit "Send me reset password instructions", class: "border border-zinc-300 p-2 bg-cyan-700 my-2 text-zinc-100 font-bold rounded-md" %>
<% end %>

<%= render "devise/shared/links" %>
