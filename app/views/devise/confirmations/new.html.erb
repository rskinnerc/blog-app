<h2 class="text-xl text-right text-cyan-700 font-bold">Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: "flex flex-col" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <%= f.label :email, class: "font-bold text-cyan-900 mx-2 mt-4 text-lg" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "rounded-md border border-cyan-700 text-cyan-900"  %>

    <%= f.submit "Resend confirmation instructions", class: "border border-zinc-300 p-2 bg-cyan-700 my-2 text-zinc-100 font-bold rounded-md" %>
<% end %>

<%= render "devise/shared/links" %>
