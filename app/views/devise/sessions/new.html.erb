<h2 class="text-xl text-right text-cyan-700 font-bold">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "flex flex-col"}) do |f| %>
    <%= f.label :email, class: "font-bold text-cyan-900 mx-2 mt-4 text-lg" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-md border border-cyan-700 text-cyan-900" %>

    <%= f.label :password, class: "font-bold text-cyan-900 mx-2 mt-4 text-lg" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "rounded-md border border-cyan-700 text-cyan-900" %>

  <% if devise_mapping.rememberable? %>
    <div class="flex items-center my-4">
        <%= f.check_box :remember_me, class: "rounded-md border border-cyan-700 text-cyan-900" %>
        <%= f.label :remember_me, class: "font-bold text-cyan-900 mx-2 text-lg"  %>
    </div>
  <% end %>

    <%= f.submit "Log in", class: "border border-zinc-300 p-2 bg-cyan-700 my-2 text-zinc-100 font-bold rounded-md" %>
<% end %>

<%= render "devise/shared/links" %>
